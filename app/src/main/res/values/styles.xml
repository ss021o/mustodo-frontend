<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DatePickerTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/main</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.DayNight">
        <!-- 상단 색 변경 -->
        <item name="colorAccent">@color/main</item>
        <!-- dialog의 배경 변경 -->
        <item name="background">@drawable/btn_line_01</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/main</item>
        <item name="colorControlHighlight">@color/main</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/main</item>
    </style>

</resources>